{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "declaration": false,
        "declarationMap": false,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true
    },
    "include": [
        "next-env.d.ts",
        "next.config.js",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
